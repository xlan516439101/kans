<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/vip_user_icon"
                android:layout_width="110dip"
                android:layout_height="110dip"
                android:layout_margin="10dip"
                android:background="@drawable/k_icon_background"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/k_space_bg_unpress"
                    android:orientation="horizontal"
                    android:padding="8dip" >

                    <TextView
                        android:layout_width="70dip"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:padding="5dip"
                        android:text="@string/kans_id_text"
                        android:textColor="@color/k_text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/vip_id_view"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="3dip"
                        android:paddingRight="3dip"
                        android:textColor="#FF5698FC"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_margin="5dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/k_space_bg_unpress"
                    android:orientation="horizontal"
                    android:padding="8dip" >

                    <TextView
                        android:layout_width="70dip"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:padding="5dip"
                        android:text="@string/kans_credit_text"
                        android:textColor="@color/k_text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/vip_credit_view"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/k_edit_background_white"
                        android:gravity="center"
                        android:minWidth="60dip"
                        android:padding="5dip"
                        android:textColor="#FFFE3102"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:padding="5dip"
                        android:text="@string/kans_credit_point_text"
                        android:textColor="@color/k_text_color"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/k_space_bg_unpress"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:padding="5dip"
                android:text="@string/kans_vip_name_text"
                android:textColor="@color/k_text_color"
                android:textSize="16sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/vip_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/k_edit_background_white"
                android:gravity="center"
                android:hint="@string/kans_name_text_hine"
                android:textColor="@color/k_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/k_space_bg_unpress"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:padding="5dip"
                android:text="@string/kans_sex_text"
                android:textColor="@color/k_text_color"
                android:textSize="16sp"
                android:textStyle="normal" />

            <RadioGroup
                android:id="@+id/vip_sex_radio_grop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dip"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/vip_sex_boy_radio"
                    android:layout_width="100dip"
                    android:layout_height="match_parent"
                    android:text="@string/kans_sex_boy_text" />

                <RadioButton
                    android:id="@+id/vip_sex_girl_radio"
                    android:layout_width="100dip"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="@string/kans_sex_girl_text" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/k_space_bg_unpress"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:padding="5dip"
                android:text="@string/kans_favorite_text"
                android:textColor="@color/k_text_color"
                android:textSize="16sp"
                android:textStyle="normal" />

            <CheckBox
                android:id="@+id/vip_favorite_check_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dip"
                android:button="@drawable/k_favorite_check_box"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/k_space_bg_unpress"
            android:gravity="left|top"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:padding="5dip"
                android:text="@string/kans_birthday_text"
                android:textColor="@color/k_text_color"
                android:textSize="16sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/vip_birthday_date_picker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/k_edit_background_white"
                android:focusable="false"
                android:gravity="center"
                android:inputType="date"
                android:textColor="@color/k_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/k_space_bg_unpress"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:padding="5dip"
                android:text="@string/kans_email_text"
                android:textColor="@color/k_text_color"
                android:textSize="16sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/vip_email_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/k_edit_background_white"
                android:gravity="center"
                android:hint="@string/kans_email_text_hine"
                android:inputType="textEmailAddress"
                android:textColor="@color/k_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:id="@+id/vip_user_buy_view"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/k_space_bg_unpress"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:gravity="left|center_vertical"
                android:padding="5dip"
                android:text="@string/kans_buy_list_text"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/vip_user_buy_count_view"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:padding="5dip"
                android:textColor="#FFFE3102"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/k_more_button" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:id="@+id/vip_user_remark_view"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/k_space_bg_unpress"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:padding="5dip"
                android:text="@string/kans_remark_text"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/vip_user_remark_count_view"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:padding="5dip"
                android:textColor="#FFFE3102"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/k_more_button" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|top"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:padding="5dip"
                    android:text="@string/kans_phone_list_text"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/vip_user_add_phone_view"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@drawable/k_menu_add" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vip_user_phone_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/k_edit_background_white"
                android:orientation="vertical"
                android:padding="5dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|top"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:padding="5dip"
                    android:text="@string/kans_vip_in_group_text"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/vip_user_add_in_group_view"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@drawable/k_menu_add" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vip_user_in_group_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/k_edit_background_white"
                android:orientation="vertical"
                android:padding="5dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|top"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:padding="5dip"
                    android:text="@string/kans_wechat_list_text"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/vip_user_add_wechat_view"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@drawable/k_menu_add" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vip_user_wechat_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/k_edit_background_white"
                android:orientation="vertical"
                android:padding="5dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|top"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:padding="5dip"
                    android:text="@string/kans_qq_list_text"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/vip_user_add_qq_view"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@drawable/k_menu_add" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vip_user_qq_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/k_edit_background_white"
                android:orientation="vertical"
                android:padding="5dip" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>