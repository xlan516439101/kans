<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dip"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="@string/file_browser_computer_leng_title"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/file_browser_computer_file_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEEEEEE"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/file_browser_computer_progressbar"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/file_browser_computer_ing"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:text="@string/file_browser_computer_ing"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="1dip"
                android:background="#FFEEEEEE"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/file_computer_file_count"
                    android:layout_width="0dip"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/file_computer_folder_count"
                    android:layout_width="0dip"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/file_browser_computer_file_leng"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/file_browser_del_cancel"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_margin="5dip"
        android:gravity="center"
        android:text="@string/file_browser_close"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</LinearLayout>