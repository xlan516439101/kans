<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dip"
    android:layout_height="105dip"
    android:layout_gravity="right|center_vertical" >

    <org.kans.zxb.view.ScrollContentView
        android:id="@+id/birthday_widget_timePicker_hour"
        android:layout_marginLeft="10dip"
        android:layout_width="41dip"
        android:layout_height="90dip"
        android:layout_gravity="left|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/birthday_widget_semicolon_time"
        android:textColor="@android:color/black" />

    <org.kans.zxb.view.ScrollContentView
        android:id="@+id/birthday_widget_timePicker_min"
        android:layout_marginRight="10dip"
        android:layout_width="41dip"
        android:layout_height="90dip"
        android:layout_gravity="right|center_vertical" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/birthday_widget_time_pick_background" />

</FrameLayout>