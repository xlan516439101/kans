<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/file_list_item_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="7dip" >

    <ImageView
        android:id="@+id/file_browse_list_view_item_ico"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:contentDescription="@null"
        android:padding="3dip" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/file_browse_list_view_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/file_browse_list_view_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff444444"
            android:textSize="12sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/control_log_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dip"
        android:checked="false"
        android:textColor="#ff0000ff"
        android:textSize="13sp" 
        android:text="@string/file_browser_del"
        android:visibility="gone"/>
    
    <Switch
        android:id="@+id/float_window_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dip"
        android:checked="false"
        android:textColor="#ff0000ff"
        android:textSize="13sp" 
        android:visibility="gone"/>

</LinearLayout>