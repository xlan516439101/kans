<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="2dip"
    android:background="@color/k_item_press">

    <Button
        android:id="@+id/del_item"
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/k_blue_btn_left"
        android:text="@string/kans_del_text" />

	<View 
        android:layout_height="40dip"
        android:layout_width="1dip"
        android:layout_gravity="center_vertical"
        android:background="@color/k_item_press_dim"/>
	
    <Button
        android:id="@+id/edit_item"
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/k_blue_btn_right"
        android:text="@string/kans_edit_text" />

</LinearLayout>