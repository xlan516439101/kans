<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/roduct_icon"
                android:layout_width="110dip"
                android:layout_height="110dip"
                android:layout_margin="10dip"
                android:background="@drawable/k_icon_background"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:background="@drawable/k_space_bg_unpress"
                    android:orientation="horizontal"
                    android:padding="8dip" >

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:padding="5dip"
                        android:text="@string/kans_name_text"
                        android:textColor="@color/k_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/roduct_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/k_edit_background_white"
                        android:gravity="center"
                        android:hint="@string/kans_name_text_hine"
                        android:inputType="text"
                        android:textColor="@color/k_text_color"
                        android:textSize="14sp" >
                    </EditText>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_margin="5dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:background="@drawable/k_space_bg_unpress"
                    android:orientation="horizontal"
                    android:padding="8dip" >

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:padding="5dip"
                        android:text="@string/kans_price_text"
                        android:textColor="@color/k_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/roduct_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/k_edit_background_white"
                        android:gravity="center"
                        android:hint="@string/kans_price_text_hine"
                        android:inputType="numberDecimal"
                        android:textColor="@color/k_text_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip"
            android:background="@color/k_item_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:background="@drawable/k_space_bg_unpress"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="@string/kans_price_class_text"
                android:textColor="@color/k_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/roduct_class"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/k_edit_background_white"
                android:gravity="center"
                android:prompt="@string/kans_price_class_text"
                android:textColor="@color/k_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/k_space_bg_unpress"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="80dip"
                android:layout_gravity="left|top"
                android:gravity="right|center_vertical"
                android:text="@string/kans_planar_code_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/roduct_planar_code_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dip"
                    android:background="@drawable/k_edit_background_white"
                    android:scaleType="centerInside"
                    android:src="@drawable/k_scan_button_image" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_margin="5dip" />

                <EditText
                    android:id="@+id/roduct_planar_code_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/k_edit_background_white"
                    android:gravity="center"
                    android:hint="@string/kans_planar_code_text_hine"
                    android:inputType="numberDecimal"
                    android:textColor="@color/k_text_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="15dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:background="@drawable/k_space_bg_unpress"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:gravity="right|center_vertical"
                android:text="@string/kans_remark_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/roduct_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/k_edit_background_white"
                android:gravity="left|top"
                android:hint="@string/kans_remark_text_hine"
                android:textColor="@color/k_text_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>